.search-view {
    box-shadow: 0rpx 2rpx 8rpx #A6A6A6;
    padding: 20rpx 0rpx;
    font-size: 28rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
}
.search {
    margin-left: 30rpx;
    width: 580rpx;
    height: 60rpx;
    border-radius: 30px;
    padding-left: 30rpx;
    background-color: #F0F0F0;
}
.search-content {
    margin-top: 100rpx;
}
.search input {
    display: inline-block;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}
.search-placeholder {
    text-align: center
}
.search-cancle {
    background-color: none;
    border: none;
    display: inline-block;
    font-size: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.search-his-title {
    padding: 42rpx 0rpx 32rpx 0rpx;
}
.search-his-title .search-his-t1 {
    /**display: inline-block;
    left: 30rpx;**/
     font-size: 34rpx;
}
.search-his-title .search-his-t2 {
     display: inline-block;
     position: absolute;
     right: 30rpx;
     color: #999999;
}
.search-his-data {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0rpx;
    border-bottom: 1px solid #F0F0F0;
}
.search-his-wait {
    position: relative;
    top: -8rpx;
    margin-right: 20rpx;
}
.search-his-del {
    width: 44rpx;
    position: absolute;
    right: 30rpx;
}
.search-his-del image {
    position: relative;
    left: 7rpx;
    bottom: 7rpx;
}

.search-result {
    padding: 30rpx 0rpx;
    border-bottom: 2rpx solid #F0F0F0;
}
.search-result .v1 {
    font-size: 34rpx;
    line-height: 48rpx;
    color: #121212;

}
.search-result .v2 {
    margin-top: 20rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #333333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.web_mark {
    color: #FE3B2F;
}
.no-search {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50%;
}
.no-search image{
    width: 200rpx;
    height: 200rpx;
}
.no-search text{
    font-size: 30rpx;
    color: #666666;
    margin-top: 40rpx;
}