.search-view {
    box-shadow: 0rpx 4rpx 4rpx #A6A6A6;
    padding: 20rpx 0rpx;
    font-size: 28rpx;
}
.search {
    display: fixed;
    top: 0;
    /**margin-top: 10rpx;**/
    /**margin-bottom: 10rpx;**/
    margin-left: 30rpx;
    width: 600rpx;
    height: 60rpx;
    border-radius: 30px;
    padding-left: 30rpx;
    background-color: #F0F0F0;
}
.search input {
    display: inline-block;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}
.search-placeholder {
    text-align: center
}
.search-cancle {
    background-color: none;
    border: none;
    display: inline-block;
    font-size: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.search-his-title {
    padding: 42rpx 0rpx 32rpx 0rpx;
}
.search-his-title .search-his-t1 {
    /**display: inline-block;
    left: 30rpx;**/
     font-size: 34rpx;
}
.search-his-title .search-his-t2 {
     display: inline-block;
     position: absolute;
     right: 30rpx;
}
.search-his-data {
    height: 44rpx;
    padding: 30rpx 0rpx;
    border-bottom: 1px solid #F0F0F0;
}
.search-his-wait {
    position: relative;
    top: -8rpx;
    margin-right: 20rpx;
}
.search-his-del {
    width: 44rpx;
    border: 1px dotted #ddd;
    position: absolute;
    right: 30rpx;
}
.search-his-del image {
    position: relative;
    left: 7rpx;
    bottom: 7rpx;
}
.search-his-keyword {
    display: inline-block;
    position: relative;
    top: -12rpx;
}