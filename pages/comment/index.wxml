<view class="comment container" wx:for="{{comments}}" wx:key="{{item.id}}" id="{{item.id}}" bindtap="_toReply">
    <image class="comment-user-headurl" src="{{item.user.headurl}}"></image>
    <view>
        <view class="comment-user">
            <text class="comment-user-username">{{item.user.username}}</text>
            <text class="comment-created_at">{{item.created_at}}</text>
        </view>
        <view class="comment-content">{{item.content}}</view>
        <view class="comment-footer">
            <text class="comment-footer-count">{{item.agree_count}}</text>
            <image class="comment-vote-icon" src="/assets/images/icon_dianzan_press@2x.png"></image>
            <text wx:if="{{item.content.length > 55}}">查看全部回复</text>
        </view>
    </view>
</view>