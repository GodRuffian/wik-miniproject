/**answer.wxss**/

.answer {
  color: #999;
  
}

.answer-body {
  padding-bottom: 40rpx;
  height: auto;
}

.blank {
  height: 20rpx;
  background-color: #f0f2f5;
}
.answer .answer-question-title {
  width: 100%;
  padding: 30rpx 0rpx;
  font-size: 38rpx;
  color: #121212;
}
.answer .answer-body-head {
  position: relative;
  padding: 30rpx 0rpx 40rpx 0rpx;
}
.answer-body-head .head-user-headurl {
  display: inline-block;
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-right: 20rpx;
}
.answer-body-head .head-username {
  font-size: 30rpx;
  position: absolute;
  top: 38rpx;
  color: #333;
}
.answer-body-head .head-user-profile {
  font-size: 26rpx;
  position: absolute;
  top: 78rpx;
  color: #999;
}
.answer-body-content {
  font-size: 34rpx;
  color: #333;
  line-height: 54rpx;
}
.answer-body-footer {
  font-size: 28rpx;
  padding-top: 40rpx;
}
.answer-footer {
  position: fixed;
  bottom: 0;
  height: 114rpx;
  font-size: 24rpx;
  width: 100%;
  background: #fff;
}
.answer-footer-blank{
  width: 100%;
  height: 20rpx;
  background-color: #f0f2f5;
}
.answer-footer-content {
  width: 100%;
  padding: 10rpx 30rpx;
}
.answer-footer view {
  float: left;

}
.answer-footer-left {
  position: relative;
  width: 50%;
  height: 76rpx;
  line-height: 76rpx;
}
.answer-footer-left .answer-footer-vote {
  position: absolute;
  width: 180rpx;
  height: 76rpx;
  background: #f2f2f2;
  line-height: 76rpx;
  border-radius: 8rpx;
}

.answer-footer-left .answer-footer-vote image {
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  padding: 2rpx;
  border: 1px dotted #6b7f99;
}
.answer-footer-left .answer-footer-vote text {
  position: absolute;
  left: 62rpx;
}
.answer-footer-unvote {
  position: absolute;
  left: 232rpx;
  border-radius: 8rpx;
  background: #f2f2f2;
  width: 92rpx;
  height: 76rpx;
}

.answer-footer-unvote image {
  border: 1px dotted #6b7f99;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  display: inline-block;
  padding: 2rpx;
  left: 31rpx;
  top: 20rpx;
}
.answer-footer-right {
  position: relative;
  height: 76rpx;
  line-height: 76rpx;
  width: 50%;
}
.answer-footer-right view {
  height: 76rpx;
}
.answer-footer-comment {
  position: absolute;

}
.answer-footer-comment image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 44rpx;
  top: 0rpx;
}
.answer-footer-comment text {
  position: absolute;
  display: inline-block;
  width: 100rpx;
  left: 30rpx;
  top: 20rpx;
  font-size: 24rpx;
}
.answer-footer-thank {

}
.answer-footer-thank image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  left: 172rpx;
}
.answer-footer-thank text {
  width: 100rpx;
  position: absolute;
  display: inline-block;
  left: 156rpx;
  top: 20rpx;
  font-size: 24rpx;
}
.answer-footer-share {

}
.answer-footer-share image {
  position: absolute;
  left: 272rpx;
  top: 0rpx;
}
.answer-footer-share text {
  width: 100rpx;
  position: absolute;
  left: 266rpx;
  top: 20rpx;
}
.my-modal {
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.19;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    overflow: hidden;
}
.my-modal-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10001;
    background: #fff;
    width: 100%;
    max-height: 452rpx;
}
.my-modal-container-head {
    font-size: 38rpx;
    color: #999999;
    padding: 40rpx 0rpx 60rpx 0rpx;
    text-align: center;
}
.my-modal-container-body {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.my-modal-container-body view {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.my-modal-container-body-v1 {
    margin-right: 57rpx;
}
.my-modal-container-body-v2 {
    margin-left: 57rpx;
}
.my-modal-container-body view text{
    font-size: 24rpx;
    color: #666666;
    margin-top: 20rpx;
}

.my-modal-container-body image {
    width: 120rpx;
    height: 120rpx;
}
.my-modal-box-footer {
    display: flex;
    justify-content: center;
    border-top: 1rpx solid #F0F0F0;
    margin-top: 40rpx;
}
.my-modal-box-footer image{
    width: 48rpx;
    height:48rpx;
    padding: 30rpx 0rpx;
}
